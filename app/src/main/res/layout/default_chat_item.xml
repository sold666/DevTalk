<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#C1C1C1">
    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/defaultLineBetweenChatsColor"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/chat_icon"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="10dp"/>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/chat_icon"
        android:layout_marginStart="10dp"
        android:scaleType="centerCrop"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/line2"
        tools:background="@color/black"
        android:contentDescription="@string/chat_icon_description" />

    <TextView
        android:id="@+id/chat_name"
        app:layout_constrainedWidth="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="wrap_content"
        app:layout_constraintHorizontal_bias="0"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:textColor="@color/black"
        android:textSize="20sp"
        tools:text="Chat name "
        app:layout_constraintLeft_toRightOf="@id/chat_icon"
        app:layout_constraintRight_toRightOf="parent"
        android:maxLines="1"
        app:layout_constraintTop_toTopOf="@id/line1"
        />
    <View
        android:id="@+id/line2"
        android:layout_width="match_parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@color/defaultLineBetweenChatsColor"
        app:layout_constraintTop_toBottomOf="@id/chat_icon" />
</androidx.constraintlayout.widget.ConstraintLayout>