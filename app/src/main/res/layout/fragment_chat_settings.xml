<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/chat_settings_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/chat_settings_return_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:contentDescription="@string/back_to_chat"
        android:padding="12dp"
        android:src="@drawable/ic_arrow_back"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/black" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:contentDescription="@string/leave_chat"
        android:padding="12dp"
        android:src="@drawable/ic_leave_group"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/chat_icon_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/background_color_primary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/chat_settings_return_button" />

    <TextView
        android:id="@+id/chat_name_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Chat name"
        android:textColor="?attr/text_color_secondary"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="@id/chat_icon_settings"
        app:layout_constraintRight_toRightOf="@id/chat_icon_settings"
        app:layout_constraintTop_toBottomOf="@id/chat_icon_settings" />

    <TextView
        android:id="@+id/amount_chat_participants"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="@string/members"
        android:textColor="?attr/text_color_secondary"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="@id/chat_icon_settings"
        app:layout_constraintRight_toRightOf="@id/chat_icon_settings"
        app:layout_constraintTop_toBottomOf="@id/chat_name_settings" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/navigation_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="?attr/background_color_individual_parts"
        android:paddingHorizontal="8dp"
        android:paddingVertical="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/amount_chat_participants">

        <View
            android:layout_width="2dp"
            android:layout_height="32dp"
            android:layout_marginEnd="20dp"
            android:background="@color/black"
            app:layout_constraintBottom_toBottomOf="@+id/switch_button"
            app:layout_constraintEnd_toStartOf="@+id/switch_button"
            app:layout_constraintTop_toTopOf="@+id/switch_button" />

        <TextView
            android:id="@+id/notifications"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/notifications"
            android:textColor="?attr/text_color_secondary"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mode"
            android:textColor="?attr/text_color_secondary"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/notifications"
            app:layout_constraintVertical_bias="0.0" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switch_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/CustomSwitchButton"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/participant_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:overScrollMode="never"
        app:fastScrollEnabled="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/navigation_panel" />

</androidx.constraintlayout.widget.ConstraintLayout>
