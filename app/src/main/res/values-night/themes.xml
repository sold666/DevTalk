<resources>
    <!-- Night application theme. -->
    <style name="DevTalkMainTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/green</item>
        <item name="colorSecondary">@color/green_second</item>
        <item name="text_color_primary">@color/green</item>
        <item name="text_color_secondary">@color/grey_second</item>
        <item name="background_color_primary">@color/grey_third</item>
        <item name="icon_tint_color_primary">@color/grey_second</item>
        <item name="button_click_color_secondary">@color/grey</item>

        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:statusBarColor">@color/black</item>
        <item name="nav_bar_bg_color">@color/black</item>
        <item name="main_nav_icon_bg_color">@color/black</item>
        <item name="profile_border">@color/black</item>
        <item name="profile_line_between_chats_color">@color/black</item>
        <item name="default_line_between_chats_color">@color/black</item>
        <item name="tab_indicator_color">@color/silver</item>
        <item name="nav_item_bg_color">@color/light_telegraph</item>
        <item name="search_bar">@color/light_grey</item>
        <item name="chat_list_in_profile_bg_color">@color/light_grey_2</item>
        <item name="list_with_recommended_chats_bg_color">@color/light_grey_2</item>
        <item name="list_with_personal_chats_bg_color">@color/light_grey_2</item>
        <item name="alter_profile_btn_bg_color">@color/gainsborough</item>
    </style>

    <style name="SplashScreenTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:background">@color/black</item>
    </style>

    <style name="Transition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>
</resources>
